//ChessDriver
import java.util.Scanner;
public class ChessDriver
{
  public static void main(String[] args) 
  {
    int turn = 0;
    Board b = new Board(true);
    System.out.print(b);
    while(true)
    {
      Scanner scan = new Scanner(System.in);
        String l = "";
      try
      {
        String a = scan.next();
        Location p = new Location(a);
        Piece oldPiece = b.getPiece(p);
        String move = scan.next();
        Location g = new Location(move);
      
        if(turn%2 ==1)
        {
          if(oldPiece.isWhite() != false)
          {
            l="Cannot move piece that is not your own color.\n";
            System.out.print(l);
            turn = turn;
          }
        }
        if(turn%2 ==0)
        {
          if(oldPiece.isWhite() != true)
          {
            l="Cannot move piece that is not your own color.\n";
            System.out.print(l);
            turn =turn;
          }
        }
          if(l.equals(""))
      {
          b.movePiece(p,g);
           turn ++;
      }
      }
        catch (Exception  e)
        {
          if( e instanceof NullPointerException)
          {
            System.out.print("No Piece at Source\n");
              turn = turn;
          }
          else
          {
          System.out.print(e.getMessage() + "\n");
            turn = turn;
          }
        }
        System.out.print(turn);
              System.out.print(b.toString());
      }
    }
  }
