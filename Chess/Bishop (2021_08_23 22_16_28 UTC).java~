//Bishop
public class Bishop extends Piece
{
  public Bishop(boolean w, Board n)
  {
    super.Piece(w,n);
  }
  public Bishop(boolean f, Board n, Location p)
  {
    super.Piece(f,n,p);
  }
  public boolean move(Location f)
  {

    int moveR = f.getRow();
    int moveC = f.getCol();
    Boolean occupied = false;
    Location original = this.myLocation();
    int r = original.getRow();
    int c = original.getCol();
    int difference = Math.abs(r-moveR);
    
    if(c - difference == moveC || c + difference == moveC && r - difference == moveR || r + difference == moveR)
    {
      if(moveC - c <0)
      {
        if(moveR - r >0)
        {
          for (int i = 1; i <difference;i++)
          {
            if(myBoard.isEmpty(new Location(r+i,c - i))==false)
            {
              occupied = true;
            }   
          }
        }
      }
      if(moveC - c >0)
      {
        if(moveR - r >0)
        {
          for (int i = 1; i <difference;i++)
          {
            if(myBoard.isEmpty(new Location(r+i,c +i))==false)
            {
              occupied = true;
            }   
          }
        }
      }
      if(moveC - c <0)
      {
        if(moveR - r <0)
        {
          for (int i = 1; i <difference;i++)
          {
            if(myBoard.isEmpty(new Location(r-i,c - i))==false)
            {
              occupied = true;
            }   
          }
        }
      }
      if(moveC - c >0)
      {
        if(moveR - r < 0)
        {
          for (int i = 1; i <difference;i++)
          {
            if(myBoard.isEmpty(new Location(r-i,c +i))==false)
            {
              occupied = true;
            }   

          }
        }
      }
    }
    if(occupied == true)
      return false;
    if(myBoard.getPiece(f)!= null)
    {
      if(myBoard.getPiece(f).isWhite() == this.isWhite())
      { 
        return false;
      }
    }
    return true;
  }
  public String toString()
  {
    String results ="b";
    if(this.isWhite()==false)
      results = results.toUpperCase();
    return results;
  }
}