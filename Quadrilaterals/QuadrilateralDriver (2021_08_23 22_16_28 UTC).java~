    yValue = JOptionPane.showInputDialog(null, "Please enter a double value for y.");//Allows the use to input their information
    double pointY = Double.parseDouble(yValue);
    Point p = new Point(pointX,pointY);//creates a new point with the given x and y coordinates
    
    xValue = JOptionPane.showInputDialog(null, "Please enter a double value for x.");//Allows the use to input their information
    pointX = Double.parseDouble(xValue);
    yValue = JOptionPane.showInputDialog(null, "Please enter a double value for y.");//Allows the use to input their information
    pointY = Double.parseDouble(yValue);
    Point g = new Point(pointX,pointY);
    
    xValue = JOptionPane.showInputDialog(null, "Please enter a double value for x.");//Allows the use to input their information
    pointX = Double.parseDouble(xValue);
    yValue = JOptionPane.showInputDialog(null, "Please enter a double value for y.");//Allows the use to input their information
    pointY = Double.parseDouble(yValue);
    Point h = new Point(pointX,pointY);
    
    xValue = JOptionPane.showInputDialog(null, "Please enter a double value for x.");//Allows the use to input their information
    pointX = Double.parseDouble(xValue);
    yValue = JOptionPane.showInputDialog(null, "Please enter a double value for y.");//Allows the use to input their information
